{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "lib": [
      "es6",
      "dom"
    ],
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.ngfactory.ts",
    "src/**/*.ngsummary.json",
    "example"
  ]
}
